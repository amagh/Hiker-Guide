<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ExpandedToolbarTitleTextAppearance" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CollapsedToolbarTitleTextAppearance" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ExpandedToolbarSubtitleTextAppearance" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CollapsedToolbarSubtitleTextAppearance" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="EditText.SignIn" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@color/white_alpha_75</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/sign_in_text_padding</item>
        <item name="backgroundTint">@android:color/white</item>
    </style>
</resources>
