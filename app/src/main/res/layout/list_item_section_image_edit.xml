<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="project.hikerguide.models.viewmodels.SectionViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/guide_details_section_margin"
        android:layout_marginBottom="@dimen/guide_details_section_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/list_section_image_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            app:image="@{vm.image}"
            app:imageUri="@{vm.imageUri}"
            tools:src="@color/bg_gray"/>

        <EditText
            android:id="@+id/list_section_image_caption_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_vertical_margin"
            android:inputType="textAutoCorrect|textCapSentences|textMultiLine"
            android:textStyle="italic"
            android:textColor="@android:color/black"
            android:hint="Image Caption"
            android:text="@={vm.content}"
            app:imeAction="@{vm.imeAction}"
            style="@style/TextAppearance.AppCompat.Caption"/>

    </LinearLayout>
</layout>