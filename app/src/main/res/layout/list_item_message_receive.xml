<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:paddingTop="8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/message_author_iv"
            android:layout_width="@dimen/message_author_image_size"
            android:layout_height="@dimen/message_author_image_size"
            android:layout_marginLeft="@dimen/message_author_margin"
            android:layout_marginStart="@dimen/message_author_margin"
            android:layout_marginTop="@dimen/message_author_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/message_tv"
            tools:src="@drawable/placeholder_profile_image"/>

        <TextView
            android:id="@+id/message_author_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="10sp"
            android:layout_marginLeft="@dimen/message_horizontal_padding"
            android:layout_marginStart="@dimen/message_horizontal_padding"
            app:layout_constraintTop_toBottomOf="@+id/message_tv"
            app:layout_constraintStart_toStartOf="@id/message_tv"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="@string/list_author_text"/>

        <TextView
            android:id="@+id/message_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/message_horizontal_padding"
            android:paddingStart="@dimen/message_horizontal_padding"
            android:paddingRight="@dimen/message_horizontal_padding"
            android:paddingEnd="@dimen/message_horizontal_padding"
            android:paddingTop="@dimen/message_vertical_padding"
            android:paddingBottom="@dimen/message_vertical_padding"
            android:background="@drawable/chat_bubble_other"
            android:layout_marginLeft="@dimen/message_outer_horizontal_margin"
            android:layout_marginStart="@dimen/message_outer_horizontal_margin"
            android:textColor="@android:color/black"
            style="@style/TextAppearance.AppCompat.Caption"
            app:layout_constraintStart_toEndOf="@id/message_author_iv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/message_author_tv"
            tools:maxWidth="260dp"
            tools:text="@string/list_message_text"/>

    </android.support.constraint.ConstraintLayout>
</layout>
