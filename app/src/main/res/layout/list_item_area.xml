<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="project.hikerguide.models.viewmodels.AreaViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/area_geo_iv"
            android:layout_width="@dimen/list_search_nav_button_size"
            android:layout_height="@dimen/list_search_nav_button_size"
            android:paddingTop="@dimen/list_search_nav_button_top_padding"
            android:paddingLeft="@dimen/list_search_nav_button_padding"
            android:paddingStart="@dimen/list_search_nav_button_padding"
            android:paddingRight="@dimen/list_search_nav_button_padding"
            android:paddingEnd="@dimen/list_search_nav_button_padding"
            android:src="@drawable/mapbox_marker_icon_default"
            android:tint="@color/colorPrimaryLight"
            android:onClick="@{vm::onClickGeolocation}"
            android:visibility="@{vm.latLngVisibility}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/area_name_tv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/area_name_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/list_search_vertical_padding"
            android:layout_marginLeft="@dimen/list_search_horizontal_padding"
            android:layout_marginStart="@dimen/list_search_horizontal_padding"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:maxLines="1"
            android:text="@{vm.name}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/TextAppearance.AppCompat.Body1"
            tools:text="@string/list_area_text"
            />

        <TextView
            android:id="@+id/area_state_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/list_search_vertical_padding"
            android:maxLines="1"
            android:text="@{vm.state}"
            android:layout_marginTop="@dimen/list_search_text_vertical_separation"
            app:layout_constraintStart_toStartOf="@+id/area_name_tv"
            app:layout_constraintEnd_toEndOf="@+id/area_name_tv"
            app:layout_constraintTop_toBottomOf="@+id/area_name_tv"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/TextAppearance.AppCompat.Caption"
            tools:text="@string/list_area_state_text"/>

    </android.support.constraint.ConstraintLayout>
</layout>
