<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="project.sherpa.models.viewmodels.RatingViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/list_rating_heading_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:gravity="center_horizontal"
            android:text="@string/list_rating_heading"
            android:visibility="@{vm.ratingHeadingVisibility}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/TextAppearance.AppCompat.Subhead"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/list_rating_author_iv"
            android:layout_width="@dimen/list_guide_author_pic_size"
            android:layout_height="@dimen/list_guide_author_pic_size"
            android:layout_marginLeft="@dimen/list_rating_horizontal_separation"
            android:layout_marginStart="@dimen/list_rating_horizontal_separation"
            android:layout_marginTop="@dimen/guide_details_internal_vertical_margin"
            android:contentDescription="@string/content_description_author_image"
            android:src="@drawable/ic_account_circle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/list_rating_heading_tv"
            app:authorImage="@{vm.authorImage}"/>

        <TextView
            android:id="@+id/list_rating_author_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_vertical_margin"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:maxLines="1"
            android:gravity="center_horizontal"
            android:text="@{vm.authorName}"
            app:layout_constraintStart_toStartOf="@id/list_rating_author_iv"
            app:layout_constraintEnd_toEndOf="@+id/list_rating_author_iv"
            app:layout_constraintTop_toBottomOf="@id/list_rating_author_iv"
            app:layout_constraintBottom_toTopOf="@+id/list_rating_comment_tv"
            style="@style/TextAppearance.AppCompat.Body2"/>

        <ImageView
            android:id="@+id/list_rating_star_1"
            android:layout_width="@dimen/rating_star_size"
            android:layout_height="@dimen/rating_star_size"
            android:padding="@dimen/rating_star_padding"
            android:layout_marginLeft="@dimen/list_rating_horizontal_separation"
            android:layout_marginStart="@dimen/list_rating_horizontal_separation"
            android:contentDescription="@{vm.ratingDescription}"
            app:layout_constraintStart_toEndOf="@id/list_rating_author_iv"
            app:layout_constraintEnd_toStartOf="@+id/list_rating_star_2"
            app:layout_constraintTop_toTopOf="@id/list_rating_author_iv"
            app:layout_constraintBottom_toBottomOf="@id/list_rating_author_tv"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:star2="@{listRatingStar2}"
            app:star3="@{listRatingStar3}"
            app:star4="@{listRatingStar4}"
            app:star5="@{listRatingStar5}"
            app:rating="@{vm.rating}"
            android:src="@drawable/ic_star"/>

        <ImageView
            android:id="@+id/list_rating_star_2"
            android:layout_width="@dimen/rating_star_size"
            android:layout_height="@dimen/rating_star_size"
            android:padding="@dimen/rating_star_padding"
            app:layout_constraintStart_toEndOf="@id/list_rating_star_1"
            app:layout_constraintEnd_toStartOf="@+id/list_rating_star_3"
            app:layout_constraintTop_toTopOf="@id/list_rating_author_iv"
            app:layout_constraintBottom_toBottomOf="@id/list_rating_author_tv"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            android:src="@drawable/ic_star"/>

        <ImageView
            android:id="@+id/list_rating_star_3"
            android:layout_width="@dimen/rating_star_size"
            android:layout_height="@dimen/rating_star_size"
            android:padding="@dimen/rating_star_padding"
            app:layout_constraintStart_toEndOf="@id/list_rating_star_2"
            app:layout_constraintEnd_toStartOf="@+id/list_rating_star_4"
            app:layout_constraintTop_toTopOf="@id/list_rating_author_iv"
            app:layout_constraintBottom_toBottomOf="@id/list_rating_author_tv"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            android:src="@drawable/ic_star"/>

        <ImageView
            android:id="@+id/list_rating_star_4"
            android:layout_width="@dimen/rating_star_size"
            android:layout_height="@dimen/rating_star_size"
            android:padding="@dimen/rating_star_padding"
            app:layout_constraintStart_toEndOf="@id/list_rating_star_3"
            app:layout_constraintEnd_toStartOf="@+id/list_rating_star_5"
            app:layout_constraintTop_toTopOf="@id/list_rating_author_iv"
            app:layout_constraintBottom_toBottomOf="@id/list_rating_author_tv"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            android:src="@drawable/ic_star"/>

        <ImageView
            android:id="@+id/list_rating_star_5"
            android:layout_width="@dimen/rating_star_size"
            android:layout_height="@dimen/rating_star_size"
            android:padding="@dimen/rating_star_padding"
            android:layout_marginRight="@dimen/list_rating_horizontal_separation"
            android:layout_marginEnd="@dimen/list_rating_horizontal_separation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/list_rating_star_4"
            app:layout_constraintTop_toTopOf="@id/list_rating_author_iv"
            app:layout_constraintBottom_toBottomOf="@id/list_rating_author_tv"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            android:src="@drawable/ic_star"/>

        <ImageView
            android:id="@+id/list_rating_edit_iv"
            android:layout_width="@dimen/list_section_icon_size"
            android:layout_height="@dimen/list_section_icon_size"
            android:padding="@dimen/list_section_icon_padding"
            android:layout_marginTop="@dimen/rating_star_top_margin"
            android:src="@drawable/ic_create"
            android:tint="@color/grey_400"
            android:visibility="@{vm.editRatingVisibility}"
            android:onClick="@{vm::onClickEditRating}"
            android:contentDescription="@string/content_description_edit_rating_button"
            app:layout_constraintStart_toEndOf="@id/list_rating_star_5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/list_rating_heading_tv"/>

        <TextView
            android:id="@+id/list_rating_comment_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@={vm.comment}"
            android:visibility="@{vm.commentVisibility}"
            android:layout_marginBottom="@dimen/guide_details_internal_vertical_margin"
            app:layout_constraintStart_toStartOf="@id/list_rating_author_iv"
            app:layout_constraintEnd_toEndOf="@id/list_rating_star_5"
            app:layout_constraintTop_toBottomOf="@id/list_rating_author_tv"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/TextAppearance.AppCompat.Body1"
            tools:text="@string/list_rating_comment_text"/>

    </android.support.constraint.ConstraintLayout>
</layout>