<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="project.sherpa.models.viewmodels.MessageViewModel"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:paddingTop="8dp">

        <TextView
            android:id="@+id/message_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/message_horizontal_padding"
            android:paddingStart="@dimen/message_horizontal_padding"
            android:paddingRight="@dimen/message_horizontal_padding"
            android:paddingEnd="@dimen/message_horizontal_padding"
            android:paddingTop="@dimen/message_vertical_padding"
            android:paddingBottom="@dimen/message_vertical_padding"
            android:background="@drawable/chat_bubble_self"
            android:layout_marginRight="@dimen/message_outer_horizontal_margin"
            android:layout_marginEnd="@dimen/message_outer_horizontal_margin"
            android:textColor="@android:color/white"
            android:text="@{vm.message}"
            style="@style/TextAppearance.AppCompat.Caption"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:maxWidth="300dp"
            tools:text="@string/list_message_text"/>

    </android.support.constraint.ConstraintLayout>
</layout>
