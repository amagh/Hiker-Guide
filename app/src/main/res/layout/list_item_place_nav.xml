<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="project.hikerguide.models.viewmodels.PlaceViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/place_primary_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/text_horizontal_margin"
            android:layout_marginEnd="@dimen/text_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:maxLines="1"
            android:text="@{vm.primaryText}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/place_geo_iv"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/TextAppearance.AppCompat.Subhead"
            tools:text="@string/list_area_text"
            />

        <TextView
            android:id="@+id/place_secondary_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:maxLines="1"
            android:text="@{vm.secondaryText}"
            app:layout_constraintStart_toStartOf="@+id/place_primary_tv"
            app:layout_constraintEnd_toEndOf="@+id/place_primary_tv"
            app:layout_constraintTop_toBottomOf="@+id/place_primary_tv"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="@string/list_area_state_text"/>

        <ImageView
            android:id="@+id/place_geo_iv"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="8dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:src="@drawable/ic_directions"
            android:tint="@color/grey_400"
            android:onClick="@{vm::onClickGeolocation}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/grey_400"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>

</layout>
