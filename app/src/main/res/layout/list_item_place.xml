<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="project.hikerguide.models.viewmodels.PlaceViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/list_place_vertical_padding"
        android:paddingBottom="@dimen/list_place_vertical_padding"
        android:paddingLeft="@dimen/list_place_horizontal_padding"
        android:paddingStart="@dimen/list_place_horizontal_padding"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_places_primary_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{vm.primaryText}"
            style="@style/TextAppearance.AppCompat.Body1"
            tools:text="Yosemite Valley"/>

        <TextView
            android:id="@+id/list_places_secondary_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/list_place_text_vertical_separation"
            android:text="@{vm.secondaryText}"
            style="@style/TextAppearance.AppCompat.Caption"
            tools:text="Los Angeles, CA, United States"/>
    </LinearLayout>

</layout>