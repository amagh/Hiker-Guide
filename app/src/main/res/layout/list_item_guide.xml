<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/card_vertical_separation"
        android:layout_marginBottom="@dimen/card_vertical_separation"
        app:contentPaddingTop="@dimen/card_vertical_padding"
        app:contentPaddingBottom="@dimen/card_vertical_padding">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/list_guide_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                style="@style/TextAppearance.AppCompat.Subhead"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/list_guide_title_text"/>

            <TextView
                android:id="@+id/list_guide_area_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Caption"
                app:layout_constraintLeft_toLeftOf="@id/list_guide_title_tv"
                app:layout_constraintTop_toBottomOf="@id/list_guide_title_tv"
                tools:text="@string/list_guide_area_text"/>

            <TextView
                android:id="@+id/list_guide_distance_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                style="@style/TextAppearance.AppCompat.Caption"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBaseline_toBaselineOf="@id/list_guide_area_tv"
                tools:text="@string/list_guide_distance_text"/>

            <TextView
                android:id="@+id/list_guide_rating_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Caption"
                app:layout_constraintLeft_toLeftOf="@id/list_guide_title_tv"
                app:layout_constraintTop_toBottomOf="@id/list_guide_area_tv"
                tools:text="@string/list_guide_rating_text"/>

            <TextView
                android:id="@+id/list_guide_reviews_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_horizontal_margin"
                android:layout_marginStart="@dimen/text_horizontal_margin"
                style="@style/TextAppearance.AppCompat.Caption"
                app:layout_constraintLeft_toRightOf="@id/list_guide_rating_tv"
                app:layout_constraintBaseline_toBaselineOf="@id/list_guide_rating_tv"
                tools:text="@string/list_guide_reviews_text"/>

            <TextView
                android:id="@+id/list_guide_difficulty_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Caption"
                app:layout_constraintRight_toRightOf="@id/list_guide_distance_tv"
                app:layout_constraintBaseline_toBaselineOf="@id/list_guide_rating_tv"
                tools:text="@string/list_guide_difficulty_text"/>

            <ImageView
                android:id="@+id/list_guide_iv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:layout_marginTop="@dimen/card_vertical_padding"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/list_guide_rating_tv"
                app:layout_constraintRight_toRightOf="parent"
                tools:src="@drawable/placeholder_guide_image"
                />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/list_guide_author_iv"
                android:layout_width="@dimen/list_guide_author_pic_size"
                android:layout_height="@dimen/list_guide_author_pic_size"
                android:layout_marginTop="@dimen/card_vertical_padding"
                app:layout_constraintLeft_toLeftOf="@id/list_guide_title_tv"
                app:layout_constraintTop_toBottomOf="@id/list_guide_iv"
                tools:src="@drawable/placeholder_profile_image"/>

            <TextView
                android:id="@+id/list_guide_author_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_horizontal_margin"
                android:layout_marginStart="@dimen/text_horizontal_margin"
                style="@style/TextAppearance.AppCompat.Caption"
                app:layout_constraintLeft_toRightOf="@id/list_guide_author_iv"
                app:layout_constraintTop_toTopOf="@id/list_guide_author_iv"
                app:layout_constraintBottom_toTopOf="@+id/list_guide_author_score_tv"
                tools:text="@string/list_author_text"/>

            <TextView
                android:id="@+id/list_guide_author_score_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Caption"
                app:layout_constraintLeft_toLeftOf="@id/list_guide_author_tv"
                app:layout_constraintTop_toBottomOf="@id/list_guide_author_tv"
                app:layout_constraintBottom_toBottomOf="@+id/list_guide_author_iv"
                tools:text="@string/list_author_score_text"/>

            <ImageView
                android:id="@+id/list_guide_favorite_btn"
                android:layout_width="@dimen/list_guide_favorite_size"
                android:layout_height="@dimen/list_guide_favorite_size"
                android:padding="@dimen/list_guide_favorite_padding"
                android:layout_marginRight="@dimen/list_guide_favorite_end_margin"
                android:layout_marginEnd="@dimen/list_guide_favorite_end_margin"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/list_guide_author_iv"
                app:layout_constraintBottom_toBottomOf="@id/list_guide_author_iv"
                tools:src="@drawable/ic_star"/>

        </android.support.constraint.ConstraintLayout>
        
    </android.support.v7.widget.CardView>

</layout>
