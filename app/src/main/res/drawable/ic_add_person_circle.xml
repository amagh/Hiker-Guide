<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval">
            <solid android:color="@color/colorPrimary"/>
            <stroke
                android:color="@color/grey_400"
                android:width="@dimen/user_backdrop_separator_height"/>
        </shape>
    </item>

    <item
        android:top="@dimen/user_social_icon_padding"
        android:bottom="@dimen/user_social_icon_padding"
        android:right="@dimen/user_social_icon_padding"
        android:left="@dimen/user_social_icon_padding">

        <bitmap android:src="@drawable/ic_person_add"/>
    </item>

</layer-list>